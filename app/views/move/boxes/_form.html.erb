<% if flash[:notice] %>
  <%= flash[:notice] %>
<% end %>

<% form_for(@box, :class => 'form-horizontal') do |f| %>
  <fieldset>
    <!-- Form Name -->
    <legend>Box</legend>

    <!-- Select Basic -->
    <div class="control-group">
      <label class="control-label" for="status">Status</label>
      <div class="controls">
        <%= f.select :status, ['PACKED', 'POSTED', 'RECEIVED'], { :include_blank => false }, :class => 'input-xlarge' %>
      </div>
    </div>

    <!-- Text input-->
    <div class="control-group">
      <label class="control-label" for="post_date">Post date</label>
      <div class="controls">
        <%= f.text_field :post_date, :placeholder => 'Post date', :class => 'input-xlarge datepicker', :type => 'text' %>
      </div>
    </div>

    <!-- Text input-->
    <div class="control-group">
      <label class="control-label" for="tracking_code">Tracking code</label>
      <div class="controls">
        <%= f.text_field :tracking_code, :placeholder => 'Tracking code', :class => 'input-xlarge', :type => 'text' %>
      </div>
    </div>

    <!-- Text input-->
    <div class="control-group">
      <label class="control-label" for="description">Description *</label>
      <div class="controls">
        <%= f.text_area :description, :required => '', :rows => 5 %>
      </div>
    </div>

    <!-- Button (Double) -->
    <div class="control-group">
      <label class="control-label" for="cancel"></label>
      <div class="controls">
        <%= link_to 'Back', move_boxes_path, :class => 'btn btn-inverse' %>
        <%= f.submit 'Save', :class => 'btn btn-primary' %>
      </div>
    </div>

  </fieldset>
<% end %>
